        <section class="section">
            <ul class="overview-cards">
                <% documents.forEach(doc => { %>
                <li class="card">
                    <div class="card-value">
                    <%= doc.fields?.titre_avec_lien_vers_le_catalogue || "Sans titre" %>
                    </div>

                    <div class="card-actions">
                    <% if (doc.FIELD9 === "borrowed") { %>
                        <form method="POST" action="/return/<%= doc._id %>?page=<%= page %>&limit=<%= limit %>">
                        <button type="submit" class="nav-link red">Rendre</button>
                        </form>
                    <% } else { %>
                        <form method="POST" action="/borrow/<%= doc._id %>?page=<%= page %>&limit=<%= limit %>">
                        <button type="submit" class="nav-link green">Emprunter</button>
                        </form>
                    <% } %>
                    </div>
                </li>
                <% }) %>
            </ul>
        </section>

        <section class="section">
            <nav class="pagination">
                <% if (page > 1) { %>
                    <a href="/?page=<%= page - 1 %>&limit=<%= limit %>" class="link_pagination">PrÃ©cÃ©dent</a>
                <% } %>

                <span>Page <%= page %> / <%= totalPages %> â€” <%= total %> livres</span>

                <% if (page < totalPages) { %>
                    <a href="/?page=<%= page + 1 %>&limit=<%= limit %>" class="link_pagination">Suivant</a>
                <% } %>
            </nav>
        </section>
    </div>
</body>
</html>